<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="#FFFFFFFF"
    android:elevation="@dimen/toolbar_elevation"
    android:minHeight="?android:attr/actionBarSize"
    tools:ignore="UnusedAttribute">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">
        <!--TITLE-->
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/toolbar_views_padding"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/toolbar_title_text_size"
            app:autoSizeMaxTextSize="@dimen/toolbar_title_text_size"
            app:autoSizeMinTextSize="1sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform" />
        <!--TITLE SUB-->
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/toolbar_title_sub"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/toolbar_views_padding"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="@dimen/toolbar_title_sub_text_size"
            app:autoSizeMaxTextSize="@dimen/toolbar_title_sub_text_size"
            app:autoSizeMinTextSize="1sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform" />
    </LinearLayout>
</android.support.v7.widget.Toolbar>